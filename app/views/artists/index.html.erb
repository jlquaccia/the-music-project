<h1>Artist Search</h1>
<i>(search for artists you would like to follow)</i>
<br>
<br>
<%= form_tag("/search", method: "get") do %>
  <div class="form-group">
    <%= label_tag(:query, "Search artist by name:") %>
    <%= text_field_tag(:query, "", class: 'form-control', autofocus: true, placeholder: "Enter artist name") %>
  </div>
  <div class="form-group">
    <%= submit_tag("Search", class: 'btn btn-success') %>
  </div>
<% end %>

<% @hash_version["artists"]["items"].each do |band| %>
  <li class="lst_none"><%= image_tag(band["images"].first["url"], class: 'img-responsive') rescue "No Images" %><%= band["name"] %></li>
<% end %>