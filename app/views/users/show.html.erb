<h1><%= current_user.name %>'s Profile</h1>

<div class="row">
  <div class="col-md-6">
    <h4 class="pull-left"><%= link_to "My Calendar", calendar_index_path %></h4>
    <h4 class="pull-right"><%= link_to "My Newsfeed", newsfeed_path %></h4>
    <div class="clearfix"></div>
    <h4><%= pluralize(current_user.follows.count, "artist") %> being followed <em><%= link_to "(edit)" %></em></h4>
    <h4>7 upcoming concerts</h4>
  </div>
  <div class="col-md-6">
    <div class="upcoming_playlist">
      <h4>Listen to playlists of tracks by artists you follow with upcoming concerts</h4>
      <ul class="shuffle">
        <li>Shuffle All</li>
      </ul>
      <br>
      <br>
      <ol>
        <% @hash_version["tracks"].each do |track| %>
          <li>
            <%= link_to "#{track['name']}", "#{track['preview_url']}" %>
          </li>
        <% end %>
      </ol>
    </div>
  </div>
</div>

<%= audio_tag("01 The Chronic (Intro).m4a",
